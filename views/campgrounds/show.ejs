 <%include ../partials/header%>

	<div class = "container">
		<div class = "row">
			<div class = "col-md-3">
				<p class = "lead">Anime</p>
				<div class = "list-group">
						<li class = "list-group-item active">Info1</li>
				</div>
			</div>
			<div class = "col-md-9">
				<div class = "thumbnail"> 
					<img class = "img-responsive" src = "<%=campground.image%>">
					<div class = "caption-full">
						<%=campground.name%></h1>
						<p>
							<%=campground.description%>
						</p>
					</div>
				</div>
				<div class = "well">
					<div>
							<%if(currentUser && campground.author.id.equals(currentUser._id)){ %>
							<p>
								<a class = "btn btn-warning"href = "/index/<%=campground._id%>/edit">EDIT</a>
							</p>

							<form action="/index/<%=campground._id%>?_method=DELETE" METHOD="POST">
								<button class = "btn btn-danger">DELETE</button>
							</form>
							<%}%>
					</div>
								<div class = "text-right">
										<p>
											<a class = "btn btn-success" href = "/index/<%=campground._id%>/comments/new"><strong>Make a new comment</strong></a>
										</p>
								</div>
								<hr>
								<%campground.comments.forEach(function(comment){%>
								<div class = "row">
										<div class = col-md-12>
											
												<strong><%=comment.author.username%></strong>
												<p>
												<%=comment.text%>
												</p>
										</div>
									</div>
							<%if(currentUser && comment.author.id.equals(currentUser._id)){%>
							<a class = "btn btn-xs btn-warning" href = "/index/<%=campground._id%>/comments/<%=comment._id%>/edit">edit</a>
							<form action = "/index/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
								<input type ="submit" class = "btn btn-xs btn-danger" value = "DELETE">
							</form>
							<%}%>
							<%})%>
							<a href ="/index" class ="btn btn-primary">Go Back</a>

				</div>
		</div>
	</div>
	<p>
		<em>Submitted by - <%=campground.author.username%></em> 
	</p>
	 

<%include ../partials/footer%>